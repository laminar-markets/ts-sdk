{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "types/*.d.ts",
    "process.d.ts",
    "tests/constants.ts"
  ],
  "exclude": ["dist", "node_modules", "tests"]
}
